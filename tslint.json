{
	"extends": [
		"tslint-microsoft-contrib",
		"tslint-eslint-rules"
	],
	"rules": {
		"function-name": [ true, {
			"method-regex": "^\\$?[a-z][\\w\\d]+$",
			"private-method-regex": "^\\$?[a-z][\\w\\d]+$",
			"protected-method-regex": "^\\$?[a-z][\\w\\d]+$",
			"static-method-regex": "^\\$?[a-z][\\w\\d]+$",
			"function-regex": "^\\$?[a-z][\\w\\d]+$"
		}],


		"missing-jsdoc": false,
		"no-relative-imports": false,
		"indent": [true, "tabs"],
		"prefer-type-cast": false,
		"no-http-string": false,
		"no-increment-decrement": false,
		"no-inner-html": false,
		"no-multiline-string": false,
		"no-suspicious-comment": false,
		"no-unsupported-browser-code": [true, [ "IE 11", "Firefox > 40", "Chrome >= 45" ] ],
		"export-name": false,
		"no-default-export": true,
		"max-line-length": false,

		"array-bracket-spacing": [true, "never"],
		"ter-arrow-body-style": [true, "as-needed", {
			"requireReturnForObjectLiteral": false
		}],
		"ter-arrow-parens": [true, "always"],
		"ter-arrow-spacing": [true, {
			"before": true,
			"after": true
		}],
		"block-spacing": [true, "always"],
		"brace-style": [true, "1tbs", {
			"allowSingleLine": true
		}],
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
		"trailing-comma": [true, {
			"multiline": "always",
			"singleline": "never"
		}],
		"cyclomatic-complexity": false,
		"curly": true,
		"switch-default": true,
		"eofline": true,
		"triple-equals": true,
		"ter-func-call-spacing": [true, "never"],
		"forin": true,
		"handle-callback-err": false,
		"ter-indent": [true, "tab", {
			"SwitchCase": 1,
			"VariableDeclarator": 1,
			"outerIIFEBody": 1,
			"FunctionDeclaration": {
				"parameters": 1,
				"body": 1
			},
			"FunctionExpression": {
				"parameters": 1,
				"body": 1
			}
		}],
		"linebreak-style": [true, "LF"],
		"ter-max-len": false,
		"max-file-line-count": false,
		"new-parens": true,
		"ban": [true, ["alert"]],
		"no-bitwise": true,
		"no-arg": true,
		"no-conditional-assignment": true,
		"no-console": [true, "assert", "clear", "count", "debug", "dir", "dirxml", "group", "groupCollapsed", "groupEnd", "info", "log", "markTimeline", "memory", "profile", "profileEnd", "table", "time", "timeEnd", "timeStamp", "timeline", "timelineEnd", "trace", "warn"],
		"no-constant-condition": true,
		"no-control-regex": true,
		"no-debugger": true,
		"no-duplicate-case": true,
		"no-empty": true,
		"no-empty-character-class": true,
		"no-eval": true,
		"no-ex-assign": true,
		"no-extra-boolean-cast": true,
		"no-extra-semi": true,
		"no-switch-case-fall-through": true,
		"no-inner-declarations": true,
		"no-invalid-regexp": true,
		"no-invalid-this": false,
		"ter-no-irregular-whitespace": true,
		"label-position": false,
		"no-magic-numbers": false,
		"no-multi-spaces": true,
		"no-consecutive-blank-lines": [true, 2],
		"no-unused-new": true,
		"no-construct": false,
		"no-duplicate-variable": true,
		"no-regex-spaces": true,
		"no-shadowed-variable": true,
		"ter-no-sparse-arrays": true,
		"no-string-throw": true,
		"no-trailing-spaces": true,
		"no-unexpected-multiline": true,
		"no-unsafe-finally": true,
		"no-unused-expressions": true,
		"no-unused-variable": [true, {"ignore-pattern": "^_"}],
		"no-use-before-declare": true,
		"no-var-keyword": true,
		"object-curly-spacing": false,
		"object-literal-shorthand": true,
		"one-variable-per-declaration": true,
		"ter-prefer-arrow-callback": [true, {
			"allowNamedFunctions": false,
			"allowUnboundThis": true
		}],
		"object-literal-key-quotes": [true, "as-needed"],
		"quotemark": [true, "single", "avoid-escape"],
		"radix": true,
		"semicolon": true,
		"sort-imports": false,
		"space-in-parens": [true, "never"],
		"comment-format": [true, "check-space"],
		"use-isnan": true,
		"valid-jsdoc": false,
		"valid-typeof": true,

		"adjacent-overload-signatures": true,
		"member-access": true,
		"member-ordering": [true, {
			"order": ["static-field", "instance-field", "constructor", "public-static-method", "protected-static-method", "private-static-method", "public-instance-method", "protected-instance-method", "private-instance-method"]
		}],
		"no-any": false,
		"no-empty-interface": false,
		"no-import-side-effect": [true, {"ignore-module": "(^rfs-[^\/]+\/src\/component$)"}],
		"no-internal-module": true,
		"no-inferrable-types": [true, "ignore-params", "ignore-properties"],
		"no-namespace": true,
		"no-reference": true,
		"no-unnecessary-type-assertion": true,
		"only-arrow-functions": [true, "allow-named-functions"],
		"prefer-for-of": true,
		"promise-function-async": true,
		"typedef": [true, "call-signature", "parameter", "member-variable-declaration"],
		"typedef-whitespace": [true, {
			"call-signature": "nospace",
			"index-signature": "nospace",
			"parameter": "nospace",
			"property-declaration": "nospace",
			"variable-declaration": "nospace"
		}, {
			"call-signature": "onespace",
			"index-signature": "onespace",
			"parameter": "onespace",
			"property-declaration": "onespace",
			"variable-declaration": "onespace"
		}],
		"completed-docs": false,
		"unified-signatures": true,
		"await-promise": true,
		"no-duplicate-super": true,
		"no-floating-promises": true,
		"no-for-in-array": true,
		"no-inferred-empty-object-type": true,
		"no-invalid-template-strings": true,
		"no-misused-new": true,
		"no-null-keyword": false,
		"no-object-literal-type-assertion": true,
		"no-string-literal": true,
		"no-this-assignment": true,
		"no-unbound-method": [true, "ignore-static"],
		"no-unsafe-any": false,
		"no-void-expression": true,
		"prefer-conditional-expression": [true, "check-else-if"],
		"prefer-object-spread": true,
		"restrict-plus-operands": true,
		"strict-boolean-expressions": false,
		"strict-type-predicates": false,
		"typeof-compare": true,
		"use-default-type-parameter": true,
		"deprecation": true,
		"no-duplicate-imports": true,
		"no-mergeable-namespace": true,
		"no-require-imports": true,
		"object-literal-sort-keys": true,
		"prefer-const": [true, {
			"destructuring": "all"
		}],
		"array-type": false,
		"arrow-parens": true,
		"arrow-return-shorthand": false,
		"binary-expression-operand-order": true,
		"callable-types": true,
		"class-name": true,
		"align": false,
		"encoding": true,
		"file-header": false,
		"import-spacing": true,
		"interface-name": [true, "always-prefix"],
		"interface-over-type-literal": true,
		"jsdoc-format": false,
		"match-default-export-name": true,
		"newline-before-return": false,
		"no-angle-bracket-type-assertion": true,
		"no-boolean-literal-compare": false,
		"no-irregular-whitespace": true,
		"no-parameter-properties": false,
		"no-reference-import": true,
		"no-trailing-whitespace": true,
		"no-unnecessary-callback-wrapper": true,
		"no-unnecessary-initializer": true,
		"no-unnecessary-qualifier": true,
		"number-literal-format": true,
		"one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
		"ordered-imports": false,
		"prefer-function-over-method": false,
		"prefer-method-signature": true,
		"prefer-switch": false,
		"prefer-template": true,
		"return-undefined": false,
		"space-before-function-paren": [true, "never"],
		"space-within-parens": false,
		"switch-final-break": true,
		"type-literal-delimiter": true,
		"whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast", "check-preblock"],
		"mocha-no-side-effect-code": false,
		"no-submodule-imports": false,
		"no-implicit-dependencies": false
	}
}
